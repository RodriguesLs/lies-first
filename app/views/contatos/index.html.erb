<div class="dark-matter">
<h1>Listando Contatos</h1>

<table>
  <thead>
    <tr>
      <th><%= Contato.human_attribute_name("nome") %></th>
      <th><%= Contato.human_attribute_name("email") %></th>
      <th><%= Contato.human_attribute_name("tipo") %></th>
      <th><%= Contato.human_attribute_name("obs") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contatos.each do |contato| %>
      <tr>
        <td><%= contato.nome %></td>
        <td><%= contato.email %></td>
        <td><%= contato.tipo.desc %></td>
        <td><%= contato.obs %></td>
        <td><%= link_to 'Edit', edit_contato_path(contato) %></td>
        <td><%= link_to 'Destroy', contato, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br><br><br>
<%= link_to 'New', new_contato_path, class: "button" %>
<%= link_to 'Back', home_index_path, class: "button" %>
</div>