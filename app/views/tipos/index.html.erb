<div class="dark-matter">
<h1>Listando os tipos</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipos.each do |tipo| %>
      <tr>
        <td><%= tipo.desc %></td>
        <td><%= link_to 'Edit', edit_tipo_path(tipo)%></td>
        <td><%= link_to 'Destroy', tipo, method: :delete, data: { confirm: 'Are you sure?' }%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br><br><br>
<%= link_to 'Novo', new_tipo_path, class: "button" %>
<%= link_to 'Voltar', home_index_path, class: "button" %>
</div>