<div class="dark-matter main-content">
  <script>
  $.notify("<%= notice %>", "success");
  </script>
  
<h1>Kind Listing</h1>

<table class="kind-table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipos.each do |tipo| %>
      <tr style="background: <%= cycle('#f0f0f5', 'white') %>">
        <td><%= tipo.desc %></td>
        <td><%= link_to 'Edit', edit_tipo_path(tipo)%></td>
        <td><%= link_to 'Destroy', tipo, method: :delete, data: { confirm: 'Are you sure?' }%></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <div class="background-dark-metter">
  </div>
  <%= link_to t('buttons.new'), new_tipo_path, class: "btn btn-warning" %>
  <%= link_to t('buttons.home'), root_path, class: "btn btn-warning" %>
</div>